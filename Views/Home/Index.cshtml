@model TESTING.Models.Inputs

@{
    ViewData["Title"] = "Home Page";

}

<div class="text-center">
    <form class="Form-flex" asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Field1">Field 1</label>
            <input asp-for="Field1" class="form-control" id="Field1">
            <span asp-validation-for="Field1" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Field2">Field 2</label>
            <input asp-for="Field2" class="form-control" id="Field2">
            <span asp-validation-for="Field2" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Field3">Field 3</label>
            <input asp-for="Field3" class="form-control" id="Field3">
            <span asp-validation-for="Field3" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Field4">Field 4</label>
            <input asp-for="Field4" class="form-control" id="Field4">
            <span asp-validation-for="Field4" class="text-danger"></span>
        </div>
        <input id="Btn" type="submit" class="btn btn-primary Form-btn">
    </form>

    <div class="Total">
        <p>Kopēpja summa: <span>@Model.Test €</span> bez PVN</p>
        <p>PVN: <span>@Model.TestPvn €</span></p>
    </div>
</div>


@section Scripts {
    @{Html.RenderPartial("_ValidationScriptsPartial", Model);}
}